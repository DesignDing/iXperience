<h1>New Place! More Joy!</h1>

<%= form_for @place do |f| %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :description %><br>
		<%= f.text_area :description %>
	</p>

	<p>
	<%= f.label :location %><br>
		<%= f.text_area :location %>
	</p>

	<p>
		<%= f.submit %>
	</p>
	
<% end %>
<%= link_to 'Back', places_path %>